<Window x:Class="CRMTFSTM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRMTFSTM"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Visibility="Hidden" >
    <Grid>
        <tb:TaskbarIcon IconSource="/Resources/Icons/cloud.ico" ToolTipText="CRM + TFS">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu Background="BlueViolet">
                    <MenuItem Header="Авторизоваться" />
                    <MenuItem Name="Exit" Header="Выйти" Click="Exit_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
